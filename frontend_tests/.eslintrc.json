{
    "env": {
        "shared-node-browser": true,
        "es6": true
    },
    "parserOptions": { "ecmaVersion": 2018 },
    "globals": {
        "assert": false,
        "casper": false,
        "document": false,
        "set_global": false,
        "window": false,
        "zrequire": false
    },
    "rules": {
        "no-sync": 0,
        "prefer-const": "error"
    }
}
